# 서버 설정
SERVER_PORT=8080

# 데이터베이스 설정 (MariaDB 기준)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=demo_db
DB_USERNAME=demo_user
DB_PASSWORD=demo_password

# JPA 설정
JPA_DDL_AUTO=update         # 운영 환경에서는 validate 또는 none 권장
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true

# 로깅 설정
LOG_ROOT_LEVEL=info
LOG_WEB_LEVEL=debug
LOG_APP_LEVEL=debug         # com.demo 패키지 기준, 실제 패키지명에 맞게 조정 가능